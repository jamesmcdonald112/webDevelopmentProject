<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <!-- Style CSS -->
    <link rel="stylesheet" href="../css/style.css" />

    <title>Checkout</title>
  </head>
  <body>
    <!-- Navbar -->
    <!-- Dark theme fixed to the top and applied custom css of navbar-height -->
    <nav class="navbar navbar-dark bg-dark fixed-top navbar-height">
      <!-- Stretches across the screen -->
      <div class="container-fluid">
        <!-- Brand logo linked to homepage -->
        <a class="navbar-brand" href="#">
          <img
            src="../images/watch-high-resolution-logo-white-transparent.png"
            alt="WatchShop Logo"
            class="navbar-img"
        /></a>
      </div>
    </nav>

    <!-- Checkout form -->
    <!-- Main container with a margin top of 5 and padding top of 5-->
    <div class="container mt-5 pt-5">
      <!-- Headiang with margin bottom of 4 -->
      <h1 class="mb-4">Checkout</h1>
      <!-- Dynamic area where cart items and totals will be displayed -->
      <div class="mb-3" id="cart_items"></div>
      <!-- Final price of the cart items -->
      <h2 class="mb-3" id="final_price">€</h2>

      <!-- Form for checkout information -->
      <form>
        <!-- Input field for user's name. Margin bottom of 3 -->
        <div class="mb-3">
          <label for="name" class="form-label">Name:</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control"
            required
          />
        </div>

        <!-- Input field for user's email -->
        <div class="mb-3">
          <label for="email" class="form-label">Email:</label>
          <input
            type="email"
            name="email"
            id="email"
            class="form-control"
            required
          />
        </div>

        <!-- Input field for user's address -->
        <div class="mb-3">
          <label for="address" class="form-label">Address:</label>
          <input
            type="text"
            name="address"
            id="address"
            class="form-control"
            required
          />
        </div>

        <!-- Selection for payment method -->
        <fieldset class="mb-4">
          <legend class="mb-2">Payment Method</legend>
          <select name="payment" id="payment" class="form-select">
            <!-- Payment options -->
            <option value="credit-card">Credit Card</option>
            <option value="PayPal">PayPal</option>
            <option value="Stripe">Stripe</option>
          </select>
        </fieldset>

        <!-- Button to submit the form and place the order -->
        <button type="submit" class="btn btn-primary">Place Order</button>

        <!-- Link to return to the shop page -->
        <a href="home" class="btn btn-secondary">Back to Shop</a>
      </form>
    </div>

    <!-- Footer - dark theme, centered white text fixed to the bottom with vertical padding of 3 -->
    <footer class="bg-dark text-center text-white py-3 fixed-bottom">
      <div class="text-center p-3">© 2024 WatchShop: All rights reserved</div>
    </footer>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <!-- checkout.js -->
    <script src="../scripts/checkout.js"></script>
  </body>
</html>
